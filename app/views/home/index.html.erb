<h1 style="font-size: 28px; color: #2c3e50; text-align: center; margin-top: 20px;">Welcome, <%= @user.name || @user.email %></h1>
<h2 style="font-size: 24px; color: #34495e; text-align: center; margin-bottom: 20px;">Top Rated Movies</h2>
<ul style="list-style-type: none; padding: 0; margin: 0; display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px; justify-content: center;">
  <% @movies.each do |movie| %>
    <li style="border: 1px solid #ddd; border-radius: 8px; padding: 16px; background-color: #f9f9f9; display: grid; grid-template-columns: 1fr auto; align-items: center; gap: 16px;">
      <div style="display: grid; gap: 4px;">
        <strong style="font-size: 18px; color: #2c3e50;">Title:</strong> <span style="font-size: 16px; color: #34495e;"><%= movie[:title] %></span> <br>
        <strong style="font-size: 18px; color: #2c3e50;">Year:</strong> <span style="font-size: 16px; color: #34495e;"><%= movie[:year] %></span> <br>
        <% if movie[:poster] %>
          <img src="<%= movie[:poster] %>" alt="Poster for <%= movie[:title] %>" style="max-width: 100%; height: auto; border-radius: 4px;" />
        <% else %>
          <p style="margin: 0; color: #e74c3c;">No poster available</p>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>

<div style="text-align: center; margin-top: 20px;">
  <% if params[:page].to_i > 1 %>
    <a href="?page=<%= params[:page].to_i - 1 %>" style="font-size: 16px; color: #3498db; text-decoration: none; margin-right: 20px;">Previous</a>
  <% end %>
  <span style="font-size: 16px; color: #34495e;">Page <%= params[:page] || 1 %></span>
  <a href="?page=<%= (params[:page].to_i || 1).to_i + 1 %>" style="font-size: 16px; color: #3498db; text-decoration: none; margin-left: 20px;">Next</a>
</div>
